from time import sleep
import random 
clear = lambda: print("\033c", end="", flush=True)
clear()

def Role():
    print("Everyone leave the area except...")
    play = random.choice(Players)
    print(play)
    Players.remove(play)
    sleep(10)
    print(random1)
    print(input("Just write anything to continue, bring everyone back in"))

def Rol():
    print("Everyone leave the area except...")
    sleep(10)
    play = random.choice(Players)
    print(play)
    print("You are out, try to fit in with the others")
    Players.remove(play)





Roles = []
Players = []
Fruit = ['Banana', 'Strawberry', 'Blueberry', 'Pineapple']
Animal = ['Carrot', 'Cucumber', 'Brocoli', 'lettuce']
Sport = ['Soccer', 'Baseball', 'Basketball']


answer = input("How many players? (4-6) ")

if answer == '4':
    print('4 players')
    player1 = input("Please enter the name of player 1: ")
    Players.append(player1)

    player2 = input("Please enter the name of player 2: ")
    Players.append(player2)

    player3 = input("Please enter the name of player 3: ")
    Players.append(player3)

    player4 = input ("Please enter the name of player 4: ")
    Players.append(player4)

if answer == '5':
    print("5 players")

